@page "/features"
<PageTitle>Features - Blazam</PageTitle>
<MudContainer Class="pt-5 px-0">
    <MudText Typo=Typo.h2 Class="pb-7" Style="text-align:center">Features</MudText>
    <MudStack Style=" background-image:url('/img/home_mid.jpg');width:100%;padding-top:100px;padding-bottom:100px;" Class="px-7 mx-0 shadow-lg parallax">



        <InfoCard Header="Personalized User Dashboard"
                  Horizontal=true
                  Class="mx-auto"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.DashboardCustomize">
            <UnorderedListItem>
                Customizable dashboard with moveable widgets
            </UnorderedListItem>
            <UnorderedListItem>
                Respects applied user permissions
            </UnorderedListItem>
            <UnorderedListItem>
                Provides quick, yet deep insight into critical areas of your Active Directory environment
            </UnorderedListItem>
        </InfoCard>




           <InfoCard Header="User, Group, Computer, and Printer Management"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.ManageAccounts">
            <UnorderedListItem>
                Enable/Disable
            </UnorderedListItem>
            <UnorderedListItem>
                Unlock
            </UnorderedListItem>
            <UnorderedListItem>
                Assign/Unassign from groups
            </UnorderedListItem>
            <UnorderedListItem>
                Move to another OU
            </UnorderedListItem>
            <UnorderedListItem>
                Rename
            </UnorderedListItem>
            <UnorderedListItem>
                Create/Delete
            </UnorderedListItem>
            <UnorderedListItem>
                Modify any Active Directory attribute
            </UnorderedListItem>
        </InfoCard>

        <InfoCard Header="Computer Monitoring"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.Computer">
            <UnorderedListItem>
                Real-time reading of CPU and memory usage
            </UnorderedListItem>
            <UnorderedListItem>
                Session List with remote logoff/disconnect/messaging
            </UnorderedListItem>
            <UnorderedListItem>
                Service State
            </UnorderedListItem>
            <UnorderedListItem>
                Drive Detail
            </UnorderedListItem>

        </InfoCard>

        <InfoCard Header="Powerful Permissions"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.SettingsPower">

            <UnorderedListItem>
                Reusable Access Levels that allow or deny access
            </UnorderedListItem>
            <UnorderedListItem>
                Apply permissions to groups or individual users
            </UnorderedListItem>
            <UnorderedListItem>
                User impersonation to verify intended privileges
            </UnorderedListItem>
            <UnorderedListItem>
                Per-Attribute/Per-Action permission granularity
            </UnorderedListItem>

        </InfoCard>

        <InfoCard Header="User Creation Templates"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.DynamicForm">


            <UnorderedListItem>
                Create templates to preconfigure and ensure required fields are filled
            </UnorderedListItem>
            <UnorderedListItem>
                Pre-define group memberships and organizational unit placement
            </UnorderedListItem>
            <UnorderedListItem>
                Templates can inherit the properties of other templates
            </UnorderedListItem>
            <UnorderedListItem>
                Optionally send a welcome email with credentials to the new user
            </UnorderedListItem>

        </InfoCard>



        <InfoCard Header="Powerful Active Directory Automation"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.SmartToy">
            <UnorderedListItem>
                Automate Active Directory management by triggering rule-based actions in response to events or on set schedules.
            </UnorderedListItem>
            <UnorderedListItem>
                Precisely target any AD object using advanced filters to apply a wide range of automated tasks and modifications.
            </UnorderedListItem>
            <UnorderedListItem>
                Control and fine-tune your automation with features like ordered rule processing, conditional stops, and expiration settings.
            </UnorderedListItem>
        </InfoCard>




        <InfoCard Header="Change Notifications"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.Notifications">
             <UnorderedListItem>
                Notification system using an OU subscription model with per-action granularity
            </UnorderedListItem>
            <UnorderedListItem>
                Receive notifications in-app, via e-mail, or both, for each subscription
            </UnorderedListItem>
            <UnorderedListItem>
                Subscription inheritance, including propagation, with block subscriptions an option at any level
            </UnorderedListItem>
        </InfoCard>




        <InfoCard Header="Deep Auditing"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.PersonSearch">

            <UnorderedListItem>
                A change history is available for every search result
            </UnorderedListItem>
            <UnorderedListItem>
                Detailed logging available to admins
            </UnorderedListItem>

        </InfoCard>



        <InfoCard Header="Automatic Updates"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.SystemUpdate">
            <UnorderedListItem>
                After configuration, automatic scheduled updates are available
            </UnorderedListItem>

        </InfoCard>



        <InfoCard Header="Recycle Bin"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.Recycling">
            <UnorderedListItem>
                Restore deleted Active Directory Objects from the recycle bin
            </UnorderedListItem>

        </InfoCard>

        <InfoCard Header="Multi-factor Authentication"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.Fingerprint">
            <UnorderedListItem>
                Secure your installation by connecting Blazam to Cisco DUO for the best MFA experience in the industry
            </UnorderedListItem>

        </InfoCard>


        <InfoCard Header="Security First"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.Lock">
            <MudText Align="Align.Center" Typo="Typo.h6">We take security very seriously, especially considering the nature of the app.</MudText>
            <UnorderedListItem>
                Optional MFA via Cisco DUO
            </UnorderedListItem> 
            <UnorderedListItem>
                Active Directory credentials are encrypted at rest, and in transit
            </UnorderedListItem>
            <UnorderedListItem>
                Database injection is impossible by standard users due to indirect access
            </UnorderedListItem>
            <UnorderedListItem>
                Automated blocking of dependencies with known security advisories
            </UnorderedListItem>
            <UnorderedListItem>
                Dependency vulnerability monitoring via dependabot
            </UnorderedListItem>
            <UnorderedListItem>
                CSRF protection using form tokens
            </UnorderedListItem>
            <UnorderedListItem>
                Continuous integration via Github Actions
            </UnorderedListItem>
            <UnorderedListItem>
                In-depth code reviews
            </UnorderedListItem>

        </InfoCard>
        
        
        
        
        <InfoCard Header="External Integrations"
                  Horizontal=true
                  Class="mx-auto mt-7"
                  MaxWidth="900px"
                  Icon="@Icons.Material.Filled.Api">
            <MudText Align="Align.Center" Typo="Typo.h6">New to Blazam is the ability to integrate with external systems.</MudText>
            <UnorderedListItem>
                REST API
            </UnorderedListItem> 
            <UnorderedListItem>
                Webhook notification subscription system
            </UnorderedListItem>
        </InfoCard>
