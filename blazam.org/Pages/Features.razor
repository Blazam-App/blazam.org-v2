        </MudItem>
        <MudItem xs="12" sm="9">

            <VideoTile Src="/vid/search.webm" />
        </MudItem>

        <MudItem xs="12" sm="3">
            <InArticleAd />
        </MudItem>
        <MudItem xs="12" sm="9">

            <DisplayAd />
        </MudItem>

        <MudItem xs="12" sm="3">
            Create reusable access levels to assign to your users.
        </MudItem>
        <MudItem xs="12" sm="9">

            <VideoTile Src="/vid/create-access-level.webm" />
        </MudItem>




        <MudItem xs="12" sm="3">
            Thorough audit logging of all user actions.
        </MudItem>
        <MudItem xs="12" sm="9">

            <VideoTile Src="/vid/audit.webm" />
        </MudItem>


        <MudItem xs="12" sm="3">
            <InArticleAd />
        </MudItem>
        <MudItem xs="12" sm="9">

            <DisplayAd />
        </MudItem>



    </MudGrid>

</MudContainer>

