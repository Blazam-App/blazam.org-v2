@inherits LayoutComponentBase

<PageTitle>Blazam</PageTitle>
<CascadingValue Value="this">

    <MudLayout Style="min-height:98vh;max-width:100vw;">
        <MainAppBar />



        <MudDrawer Width="185px" @bind-Open=@DrawerOpen Elevation="3" Class="mud-theme-dark">
            <NavMenu />

        </MudDrawer>

        <MudMainContent Class="mud-height-full">



            <MudStack Row=true>
                <MudHidden Breakpoint="Breakpoint.LgAndUp" Invert=true>

                    <MudStack AlignItems=AlignItems.End Style="margin-top:56px; width:200px;">
                       

                    </MudStack>
                </MudHidden>
                <MudContainer MaxWidth="MaxWidth.Large" Class=" mud-height-full pa-0" Style="margin-top:56px;background-color:whitesmoke">
                    @Body



                    <AppFooter />

                </MudContainer>
                <MudHidden Breakpoint="Breakpoint.LgAndUp" Invert=true>

                    <MudStack AlignItems=AlignItems.Start Style="margin-top:56px; width:200px;">
                        <DisplayAd />
                        <DisplayAd />
                        <DisplayAd />

                    </MudStack>
                </MudHidden>

            </MudStack>

            <MudStack Class="d-inline">
                <DisplayAd />
                <DisplayAd />
                <DisplayAd />


            </MudStack>
        </MudMainContent>

        @*<NotificationBroadcastListener />*@



    </MudLayout>

</CascadingValue>
@code {
    bool drawerOpen = false;
    public bool DrawerOpen
    {
        get => drawerOpen; set
        {
            drawerOpen = value;
            InvokeAsync(StateHasChanged);
        }
    }
}