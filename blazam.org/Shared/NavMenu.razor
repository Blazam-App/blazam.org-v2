@inject IJSRuntime JSRuntime
@{

}
<MudPaper Width="180px" Style="height:100%" Elevation="0" Class="py-3 mud-theme-dark">



    <MudNavMenu Style="height:100%">

        <MudStack Style="height:100%">
            <MudNavLink Href="/features" Match="NavLinkMatch.Prefix" Style="max-width:max-content;" Icon="@Icons.Material.Filled.List">
                @AppLocalization["Features"]
            </MudNavLink>

            <MudNavLink Href="/demo" Match="NavLinkMatch.Prefix" Style="max-width:max-content;" Icon="@Icons.Material.Filled.CarRental">
                Demo
            </MudNavLink>

            <MudNavLink Href="/download" Match="NavLinkMatch.Prefix" Style="max-width:max-content;" Icon="@Icons.Material.Filled.Download">
                Download
            </MudNavLink>
            <MudNavLink Target="_blank" Href="https://docs.blazam.org/" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Book">
                @AppLocalization["Documentation"]
            </MudNavLink>

            <MudNavLink Href="/support" Match="NavLinkMatch.Prefix" Style="max-width:max-content;" Icon="@Icons.Material.Filled.Support">
                Support
            </MudNavLink>






            <MudSpacer />

            <MudNavLink Icon=@Icons.Custom.Brands.GitHub Target="Target.Blank" Href="https://github.com/Blazam-App/BLAZAM">
                GitHub
            </MudNavLink>

            <MudNavLink Icon=@Icons.Material.Filled.Code Target="Target.Blank" Href="https://github.com/Blazam-App/blazam.org-v2">
                Blazam.org Source Code
            </MudNavLink>

        </MudStack>
    </MudNavMenu>
</MudPaper>
@code {
    public enum AppPage { Index, Features, Demo, Download, ManualInstall, MSIInstall };
    [CascadingParameter]
    public MainLayout Layout { get; set; }

    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    protected override async Task OnInitializedAsync()
    {
        base.OnInitializedAsync();

     
        InvokeAsync(StateHasChanged);


    }

  

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
