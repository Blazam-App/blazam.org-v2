@{
    string? effectiveMaxWidth = null;
    if (MaxWidth != null)
    {
        effectiveMaxWidth = " max-width:" + @MaxWidth + ";";

    }
    else
    {
        effectiveMaxWidth = " width=100%;";
    }
}
<MudCard Class="@Class" Style=@(effectiveMaxWidth) Elevation="@Elevation">
    <MudGrid Class="pa-4 pt-7">
        <MudItem xs="12" md="@(Horizantal==true?3:12)" Class="d-flex">
            <MudStack Class="align-self-center mx-auto" >
                <MudIcon Icon="@Icon" Size=Size.Large Style="font-size:50px;" Class="align-self-center" Color="Color.Tertiary" />

                @if (Header != null)
                {
                    <MudText Style="text-align: center;" Typo=Typo.h4 ElementId="h0">@Header</MudText>

                }
            </MudStack>
        </MudItem>

        <MudItem xs="12" md="@(Horizantal==true?9:12)" Class="d-flex">
            @if (Text != null)
            {
                <MudText Typo=Typo.h6 Class="align-self-center mx-auto pb-4" Style="text-align:center;">@Text</MudText>
            }
            @if (ChildContent != null)
            {
                <MudElement Class="align-self-center mx-auto pb-4">
                    @ChildContent

                </MudElement>
            }
        </MudItem>
    </MudGrid>
    @* <MudStack Row=Horizantal Style="width:100%;" Class="pa-4 pt-7">
        <MudStack Class="align-self-center">
            <MudIcon Icon="@Icon" Size=Size.Large Style="font-size:50px;" Class="align-self-center" Color="Color.Tertiary" />

            @if (Header != null)
            {
                <MudText Style="text-align: center;" Typo=Typo.h4 ElementId="h0">@Header</MudText>

            }
        </MudStack>
        <MudSpacer />
        @if (Text != null)
        {
            <MudText Typo=Typo.h6 Style="text-align:center;">@Text</MudText>
        }
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </MudStack> *@
</MudCard>

@code {
    [Parameter]
    public string? Header { get; set; }
    [Parameter]
    public bool Horizantal { get; set; } = false;
    [Parameter]
    public string MaxWidth { get; set; }
    [Parameter]
    public int Elevation{ get; set; } = 15;

    [Parameter]

    public string Class { get; set; }

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
